            <DataTemplate x:Key="BotTemplate">

                <StackLayout
                        Padding="0,16,0,-10">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer/>
                    </StackLayout.GestureRecognizers>
                    <Label Text="{Binding categoryName}"
                               TextColor="#212121"
                               FontSize="Large"
                               FontAttributes="Bold"
                               Margin="16,0">
                        <Label.FontFamily>
                            <OnPlatform x:TypeArguments="x:String">
                                <On Platform="iOS">Bryant</On>
                                <On Platform="Android">BryantBoldAlt-Regular.otf#Bryant</On>
                            </OnPlatform>
                        </Label.FontFamily>
                    </Label>

                    <controls:HorizontalListView ItemSource="{Binding bandList}"
                                        Orientation="Horizontal" HeightRequest="140">
                        <controls:HorizontalListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout
                                            Orientation="Vertical"
                                            Margin="16,0,-10,0">
                                        <controls:CustomFrame
                                                 Padding="0"
                                                 Margin="0"
                                                 CornerRadius="4"
                                                 HasShadow="True">
                                            <ffImageLoading:CachedImage Source="{Binding imgSource}" 
                                                                            HeightRequest="100" 
                                                                            WidthRequest="100"
                                                                            Aspect="AspectFit">
                                                <ffImageLoading:CachedImage.GestureRecognizers>
                                                    <TapGestureRecognizer NumberOfTapsRequired="1" 
                                                                          Command="{Binding BandClick}"
                                                                          CommandParameter="{Binding .}"/>
                                                </ffImageLoading:CachedImage.GestureRecognizers>
                                            </ffImageLoading:CachedImage>

                                        </controls:CustomFrame>

                                        <Label Text="{Binding bandName}"
                                                   FontSize="14"
                                                   LineBreakMode="TailTruncation"
                                                   WidthRequest="80"
                                                   XAlign="Center">
                                            <Label.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS">Bryant</On>
                                                    <On Platform="Android">BryantMediumAlt-Regular.otf#Bryant</On>
                                                </OnPlatform>
                                            </Label.FontFamily>
                                        </Label>
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </controls:HorizontalListView.ItemTemplate>
                    </controls:HorizontalListView>
                </StackLayout>

            </DataTemplate>

        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="0,20,0,0"
                    Android="0"/>
    </ContentPage.Padding>

    <StackLayout x:Name="mainLayout"
                  Padding="0"
                     HorizontalOptions="FillAndExpand"
                     VerticalOptions="FillAndExpand">

        <flv:FlowListView FlowItemsSource="{Binding DiscoverList}"
                          FlowColumnCount="1"
                          HasUnevenRows="True"
                          SeparatorVisibility="None"
                          FlowColumnTemplate="{StaticResource BotTemplate}"
                          IsPullToRefreshEnabled="True"
                          IsRefreshing="{Binding IsListRefreshing}"
                          RefreshCommand="{Binding RefreshCommand}"/>



    </StackLayout>
</ContentPage>
