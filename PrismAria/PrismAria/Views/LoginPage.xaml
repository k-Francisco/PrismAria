<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:PrismAria.Controls;assembly=PrismAria"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="PrismAria.Views.LoginPage">

    <ContentPage.Resources>
        <!--Resources Here-->
    </ContentPage.Resources>
    
    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <controls:CustomLabel Grid.Row="0"
            TextColor="Black"
            Text="Aria"
            StyleId="Milkshake"
            FontFamily="Milkshake"
            FontSize="62"
            HorizontalOptions="Center"
            VerticalOptions="End"
            Margin="0,0,0,16"/>

        <StackLayout Grid.Row="1">
            <StackLayout.Spacing>
                <OnPlatform x:TypeArguments="x:Double"
                            Android="4"
                            iOS="12"/>    
            </StackLayout.Spacing>
            <StackLayout.Padding>
                <OnPlatform x:TypeArguments="Thickness"
                            Android="16,32,16,32"
                            iOS="16,52,16,32"/>
            </StackLayout.Padding>
            
            <Button
                Text="Login"
                BackgroundColor="#2C3E50"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Center"
                TextColor="White"/>
            
                <Button
                Command="{Binding FbLoginCommand}"
                Text="Login with facebook"
                BackgroundColor="#3B5998"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Center"
                TextColor="White"/>

            <controls:CustomLabel
                Text="Sign up here!"
                TextColor="#2C3E50"
                HorizontalOptions="Center"
                FontSize="16"
                FontFamily="BryantBoldAlt-Regular"
                StyleId="BryantMediumAlt-Regular"/>

        </StackLayout>
        
        <!--2nd stack layout-->

        <StackLayout Grid.Row="1">
            <StackLayout.Spacing>
                <OnPlatform x:TypeArguments="x:Double"
                            Android="4"
                            iOS="12"/>
            </StackLayout.Spacing>
            <StackLayout.Padding>
                <OnPlatform x:TypeArguments="Thickness"
                            Android="16,32,16,32"
                            iOS="16,52,16,32"/>
            </StackLayout.Padding>

            <Button
                Text="Login"
                BackgroundColor="#2C3E50"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Center"
                TextColor="White"/>

            <Button
                Command="{Binding FbLoginCommand}"
                Text="Login with facebook"
                BackgroundColor="#3B5998"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Center"
                TextColor="White"/>

            <controls:CustomLabel
                Text="Sign up here!"
                TextColor="#2C3E50"
                HorizontalOptions="Center"
                FontSize="16"
                FontFamily="BryantBoldAlt-Regular"
                StyleId="BryantMediumAlt-Regular">
                <controls:CustomLabel.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SignUpCommand}"/>
                </controls:CustomLabel.GestureRecognizers>
            </controls:CustomLabel>

        </StackLayout>

    </Grid>
  
</ContentPage>