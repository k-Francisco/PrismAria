<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:ffImage="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:controls="clr-namespace:PrismAria.Controls;assembly=PrismAria"
             xmlns:flv="clr-namespace:DLToolkit.Forms.Controls;assembly=DLToolkit.Forms.Controls.FlowListView"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="PrismAria.Views.SubscriberFavoritesPage"
             AutomationId="Favorites">

    <flv:FlowListView FlowItemsSource="{Binding FavoritesCollection}"
                      FlowColumnCount="2"
                      HasUnevenRows="True"
                      SeparatorVisibility="None">

        <!--<flv:FlowListView.FlowLoadingTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="loading"/>

                    </ViewCell>
                </DataTemplate>
            </flv:FlowListView.FlowLoadingTemplate>-->

        <flv:FlowListView.FlowColumnTemplate>
            <DataTemplate>
                <Grid
                        Margin="8,12,8,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="130"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>

                    <ffImage:CachedImage Grid.Row="0"
                                             Source="{Binding bandImage}"
                                             Aspect="AspectFill"/>

                    <controls:CustomLabel Grid.Row="1"
                                              Text="{Binding bandName}"
                                              TextColor="#2C3E50"
                                              FontSize="Medium"
                                              Margin="0"
                                              FontFamily="BryantBoldAlt-Regular"
                                              StyleId="BryantBoldAlt-Regular"/>

                    <controls:CustomLabel Grid.Row="1"
                                              Text="{Binding songsAndAlbums}"
                                              TextColor="#2C3E50"
                                              FontSize="Small"
                                              Margin="0,20,0,0"
                                              FontFamily="BryantMediumAlt-Regular"
                                              StyleId="BryantMediumAlt-Regular"/>
                </Grid>
            </DataTemplate>
        </flv:FlowListView.FlowColumnTemplate>
    </flv:FlowListView>
    
</ContentPage>