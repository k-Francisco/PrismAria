<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:popanim="clr-namespace:Rg.Plugins.Popup.Animations;assembly=Rg.Plugins.Popup"
             xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
             xmlns:ffimage="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:fftrans="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations"
             xmlns:controls="clr-namespace:PrismAria.Controls;assembly=PrismAria"
             xmlns:flv="clr-namespace:DLToolkit.Forms.Controls;assembly=DLToolkit.Forms.Controls.FlowListView"
             x:Class="PrismAria.PopupPages.UserPopupPage"
             CloseWhenBackgroundIsClicked="False">

    <pages:PopupPage.HasSystemPadding>
        <OnPlatform x:TypeArguments="x:Boolean">
            <On Platform="iOS">False</On>
            <On Platform="Android">True</On>
        </OnPlatform>
    </pages:PopupPage.HasSystemPadding>
    
    <pages:PopupPage.Animation>
        <popanim:ScaleAnimation
            PositionIn="Center"
            PositionOut="Center"
            ScaleIn="0.8"
            ScaleOut="0.8"
            DurationIn="400"
            DurationOut="300"
            EasingIn="SpringOut"
            EasingOut="SpringOut"
            HasBackgroundAnimation="True"/>
    </pages:PopupPage.Animation>

    <pages:PopupPage.Content>
        <OnPlatform x:TypeArguments="View">
            <On Platform="iOS">

                <Grid RowSpacing="0"
              Margin="0"
                      BackgroundColor="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ScrollView Grid.Row="0">
                        <StackLayout 
                     Spacing="0">

                            <ffimage:CachedImage x:Name="UserPiciOS"
                                     Source="{Binding UserPic}"
                                     Aspect="AspectFit"
                                     HorizontalOptions="Center"
                                     VerticalOptions="CenterAndExpand"
                                     DownsampleToViewSize="True"
                                     DownsampleHeight="100"
                                     WidthRequest="70"
                                     HeightRequest="70"
                                     CacheDuration="1"
                                     Margin="0,24,0,0">
                                <ffimage:CachedImage.Transformations>
                                    <fftrans:CircleTransformation/>
                                </ffimage:CachedImage.Transformations>
                            </ffimage:CachedImage>

                            <Label Text="{Binding UserName}"
                           HorizontalOptions="Center"
                           Margin="0,8,0,0"
                           FontSize="Large"
                           TextColor="#212121">
                                <Label.FontFamily>
                                    <OnPlatform x:TypeArguments="x:String">
                                        <On Platform="iOS">Bryant</On>
                                        <On Platform="Android">BryantBoldAlt-Regular.otf#Bryant</On>
                                    </OnPlatform>
                                </Label.FontFamily>
                            </Label>

                            <Grid RowSpacing="0"
                    Padding="0"
                    VerticalOptions="EndAndExpand"
                    Margin="8,0,8,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Frame Grid.Column="0"
                           CornerRadius="4"
                           HasShadow="False"
                           HeightRequest="70"
                           BackgroundColor="Transparent">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer NumberOfTapsRequired="1" Command="{Binding CreateBandCommand}"/>
                                    </Frame.GestureRecognizers>
                                    <StackLayout>
                                        <Image Source="ic_add_band.png"
                                                   HeightRequest="32"
                                                   WidthRequest="32"
                                                   Margin="0"/>
                                        <Label Text="Add Band">
                                            <Label.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS">Bryant</On>
                                                    <On Platform="Android">BryantMediumAlt-Regular.otf#Bryant</On>
                                                </OnPlatform>
                                            </Label.FontFamily>
                                        </Label>
                                    </StackLayout>
                                </Frame>

                                <Frame Grid.Column="1"
                           CornerRadius="4"
                           HasShadow="False"
                           HeightRequest="70"
                           BackgroundColor="Transparent">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer NumberOfTapsRequired="1"/>
                                    </Frame.GestureRecognizers>
                                    <StackLayout>
                                        <Image Source="ic_settings_black.png"/>
                                        <Label Text="Settings"
                                       HorizontalOptions="Center">
                                            <Label.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS">Bryant</On>
                                                    <On Platform="Android">BryantMediumAlt-Regular.otf#Bryant</On>
                                                </OnPlatform>
                                            </Label.FontFamily>
                                        </Label>
                                    </StackLayout>
                                </Frame>
                                <Frame Grid.Column="2"
                           CornerRadius="4"
                           HasShadow="False"
                           HeightRequest="70"
                           BackgroundColor="Transparent">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding LogoutCommand}" NumberOfTapsRequired="1"/>
                                    </Frame.GestureRecognizers>
                                    <StackLayout>
                                        <Image Source="ic_power_settings.png"/>
                                        <Label Text="Logout"
                                       HorizontalOptions="Center">
                                            <Label.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS">Bryant</On>
                                                    <On Platform="Android">BryantMediumAlt-Regular.otf#Bryant</On>
                                                </OnPlatform>
                                            </Label.FontFamily>
                                        </Label>
                                    </StackLayout>
                                </Frame>
                            </Grid>

                        </StackLayout>
                    </ScrollView>

                    <Label Grid.Row="1" Text="Switch to your band: "
                   FontSize="Small"
                   Margin="8,0">
                        <Label.FontFamily>
                            <OnPlatform x:TypeArguments="x:String">
                                <On Platform="iOS">Bryant</On>
                                <On Platform="Android">BryantMediumAlt-Regular.otf#Bryant</On>
                            </OnPlatform>
                        </Label.FontFamily>
                    </Label>

                    <flv:FlowListView Grid.Row="1" FlowItemsSource="{Binding UserBands}"
                                  FlowColumnCount="1"
                                  SeparatorVisibility="None"
                                  HasUnevenRows="True"
                                  Margin="0,20,0,0"
                                  FlowItemTappedCommand="{Binding NavigateToBandCommand}">

                        <flv:FlowListView.FlowColumnTemplate>
                            <DataTemplate>
                                <Grid Margin="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <ffimage:CachedImage Grid.Column="0" Source="{Binding userBandImage}"
                                                     Aspect="AspectFit"
                                                     DownsampleToViewSize="True"
                                                     CacheDuration="1"
                                                     HeightRequest="45"
                                                     WidthRequest="45"
                                                 VerticalOptions="Center"
                                                 HorizontalOptions="Center">
                                        <ffimage:CachedImage.Transformations>
                                            <fftrans:CircleTransformation/>
                                        </ffimage:CachedImage.Transformations>
                                    </ffimage:CachedImage>

                                    <Label Grid.Column="1" Text="{Binding userBandName}"
                                   TextColor="#2C3E50"
                                   FontSize="Medium"
                                   VerticalOptions="CenterAndExpand">
                                        <Label.FontFamily>
                                            <OnPlatform x:TypeArguments="x:String">
                                                <On Platform="iOS">Bryant</On>
                                                <On Platform="Android">BryantMediumAlt-Regular.otf#Bryant</On>
                                            </OnPlatform>
                                        </Label.FontFamily>
                                    </Label>
                                </Grid>
                            </DataTemplate>
                        </flv:FlowListView.FlowColumnTemplate>
                    </flv:FlowListView>
                </Grid>

            </On>



            <!--Android view-->
            <On Platform="Android">

                <Frame CornerRadius="12"
                       Margin="25"
                       Padding="0"
                       BackgroundColor="#FAFAFA">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackLayout Grid.Row="0"
                                     Spacing="4">

                            <Image Source="ic_close.png"
                                    VerticalOptions="Start"
                                    HorizontalOptions="Start"
                                    HeightRequest="18"
                                    WidthRequest="18"
                                    Margin="16,16">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Command="{Binding ClosePopupCommand}"/>
                                </Image.GestureRecognizers>
                            </Image>

                            <ffimage:CachedImage x:Name="UserPicAndroid"
                                                 Source="{Binding UserPic}"
                                                 Aspect="Fill"
                                                 DownsampleToViewSize="True"
                                                 DownsampleWidth="60"
                                                 HorizontalOptions="Center"
                                                 VerticalOptions="Start"
                                                 HeightRequest="60"
                                                 WidthRequest="60">
                                <ffimage:CachedImage.Transformations>
                                    <fftrans:CircleTransformation/>
                                </ffimage:CachedImage.Transformations>
                            </ffimage:CachedImage>

                            <Label Text="{Binding UserName}"
                                   FontAttributes="Bold"
                                   FontSize="32"
                                   HorizontalOptions="Center"
                                   TextColor="#212121">
                                <Label.FontFamily>
                                    <OnPlatform x:TypeArguments="x:String">
                                        <On Platform="iOS">Bryant</On>
                                        <On Platform="Android">BryantBoldAlt-Regular.otf#Bryant</On>
                                    </OnPlatform>
                                </Label.FontFamily>
                            </Label>

                            <Grid Margin="0,24,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="24"/>
                                    <RowDefinition Height="20"/>
                                </Grid.RowDefinitions>

                                <Image Grid.Row="0" Grid.Column="0"
                                       Source="ic_add_band.png">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer NumberOfTapsRequired="1" Command="{Binding CreateBandCommand}"/>
                                    </Image.GestureRecognizers>
                                </Image>

                                <Image Grid.Row="0" Grid.Column="1"
                                       Source="ic_settings_black.png"/>

                                <Image Grid.Row="0" Grid.Column="2"
                                       Source="ic_power_settings.png">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer NumberOfTapsRequired="1" Command="{Binding LogoutCommand}"/>
                                    </Image.GestureRecognizers>
                                </Image>


                                <Label Grid.Row="1" Grid.Column="0"
                                       Text="Form a Band"
                                       HorizontalOptions="Center"/>

                                <Label Grid.Row="1" Grid.Column="1"
                                       Text="Settings"
                                       HorizontalOptions="Center"/>

                                <Label Grid.Row="1" Grid.Column="2"
                                       Text="Logout"
                                       HorizontalOptions="Center"/>


                            </Grid>
                        </StackLayout>

                        <Label Grid.Row="1" Text="Your bands: "
                               FontSize="Small"
                               Margin="8,0">
                            <Label.FontFamily>
                                <OnPlatform x:TypeArguments="x:String">
                                    <On Platform="iOS">Bryant</On>
                                    <On Platform="Android">BryantMediumAlt-Regular.otf#Bryant</On>
                                </OnPlatform>
                            </Label.FontFamily>
                        </Label>

                        <flv:FlowListView Grid.Row="1" FlowItemsSource="{Binding UserBands}"
                                  FlowColumnCount="1"
                                  SeparatorVisibility="None"
                                  HasUnevenRows="True"
                                  Margin="0,20,0,0"
                                  FlowItemTappedCommand="{Binding NavigateToBandCommand}">

                            <flv:FlowListView.FlowColumnTemplate>
                                <DataTemplate>
                                    <Grid Margin="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <ffimage:CachedImage Grid.Column="0" Source="{Binding userBandImage}"
                                                     Aspect="AspectFit"
                                                     DownsampleToViewSize="True"
                                                     CacheDuration="1"
                                                     HeightRequest="45"
                                                     WidthRequest="45"
                                                 VerticalOptions="Center"
                                                 HorizontalOptions="Center">
                                            <ffimage:CachedImage.Transformations>
                                                <fftrans:CircleTransformation/>
                                            </ffimage:CachedImage.Transformations>
                                        </ffimage:CachedImage>

                                        <Label Grid.Column="1" Text="{Binding userBandName}"
                                                TextColor="#212121"
                                                FontSize="Medium"
                                                VerticalOptions="CenterAndExpand">
                                            <Label.FontFamily>
                                                <OnPlatform x:TypeArguments="x:String">
                                                    <On Platform="iOS">Bryant</On>
                                                    <On Platform="Android">BryantMediumAlt-Regular.otf#Bryant</On>
                                                </OnPlatform>
                                            </Label.FontFamily>
                                        </Label>
                                    </Grid>
                                </DataTemplate>
                            </flv:FlowListView.FlowColumnTemplate>
                        </flv:FlowListView>

                    </Grid>
                </Frame>
                
            </On>
        </OnPlatform>
    </pages:PopupPage.Content>


</pages:PopupPage>